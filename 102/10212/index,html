<div class="main-card">
    <h1>歲末寄語</h1>
    <div class="subtitle">ELEGANT GREETINGS</div>
    
    <div class="select-group">
        <select id="role-select">
            <option value="grandparents">致 家族長輩</option>
            <option value="parents">致 摯愛雙親</option>
            <option value="elders">致 親友尊長</option>
            <option value="boss">致 職場提攜</option>
        </select>
    </div>

    <button class="btn-generate" onclick="generate()">抽取祝禱</button>

    <div id="result-display">
        <div class="deco-line"></div>
        <div class="greeting-quote" id="text-target"></div>
        <div class="copy-hint" onclick="copy()">— 點擊文字複製 —</div>
    </div>
</div>

<script>
    const quotes = {
        grandparents: [
            "歲月靜好，福壽綿長，願您如松柏長青，春日常在。",
            "福慧雙增，如意康安。願新的一年，星辰璀璨，歲歲平安。",
            "願您福如東海、壽比南山，在時光裡慢行，安享清福。",
            "願您新春如意，身體康泰，笑口常開，日日是好日。",
            "祝您松鶴長春，富貴安康，子孫繞膝，福滿堂前。",
            "歲月增中減，福壽滿乾坤。願您新的一年平安喜樂。"
        ],
        parents: [
            "感謝歲月溫柔，願父母身體安康，萬事隨心，喜樂常伴。",
            "新歲序開，願您二位平安喜樂，萬事如意，笑口常開。",
            "願生活如詩，願您健康如初。辛苦了，新春快樂。",
            "吉星高照，歲歲平安。願未來的每一天，您都充滿笑容。",
            "願您在新的的一年裡，日子紅火，心情舒暢，一切順心。",
            "生活雖然平凡，但願您的每一天都閃閃發亮，平安健康。"
        ],
        elders: [
            "願您歲歲平安，年年如意。在新的一年，大吉大利，萬事勝意。",
            "吉星高照，財源廣進。願您前程似錦，生活美滿如初。",
            "一元復始，萬象更新。祝您新春佳節，平安順遂，闔家歡樂。",
            "祝您新春行大運，春風得意，福氣滿滿，萬事皆順。",
            "願您財氣東來，好運連連，新的一年身體龍馬精神。",
            "恭賀新禧，願您平安如意，心想事成，歲歲皆歡愉。"
        ],
        boss: [
            "祝您事業大展鴻圖，如龍騰飛，業績輝煌，再創巔峰。",
            "願新的一年，貴人扶持，順風順水，帶領我們共創燦爛明天。",
            "祝您事業蒸蒸日上，財庫豐盈，步步高升，萬事亨通。",
            "新春大吉，願您宏圖大展，運籌帷幄，帶領團隊再登高峰。",
            "祝您財源廣進，生意興隆，新年事業更上一層樓。",
            "感謝您過去的提攜，願您新年萬事勝意，龍騰虎躍。"
        ]
    };

    let lastQuote = "";

    function generate() {
        const role = document.getElementById('role-select').value;
        const options = quotes[role];
        let randomQuote;
        
        // 確保不連續重複
        do {
            randomQuote = options[Math.floor(Math.random() * options.length)];
        } while (randomQuote === lastQuote && options.length > 1);
        
        lastQuote = randomQuote;
        
        const display = document.getElementById('result-display');
        const target = document.getElementById('text-target');
        
        display.classList.remove('show');
        
        setTimeout(() => {
            target.innerText = randomQuote;
            display.classList.add('show');
        }, 300);
    }

    function copy() {
        const text = document.getElementById('text-target').innerText;
        if(!text) return;
        navigator.clipboard.writeText(text).then(() => {
            const hint = document.querySelector('.copy-hint');
            hint.innerText = "— 已複製寄語 —";
            setTimeout(() => hint.innerText = "— 點擊文字複製 —", 2000);
        });
    }
</script>

</body>
